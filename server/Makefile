##################################################################### 
#   Variables				  										#
#####################################################################

OBJECTS = *.o
BINARY = sic_server

##################################################################### 
#   Options 							#
#####################################################################

CC = gcc
CFLACS = -g -lssl -UOPENSSL_NO_EC 

##################################################################### 
#   Rules							#
#####################################################################

all: sic_server

sic_server: sic_server.c ecdsa.c ntp-packet.h
	$(CC) $(CFLACS) -o $(BINARY) ecdsa.c sic_server.c -lcrypto
clean:
	rm -f $(BINARY) $(OBJECTS)
