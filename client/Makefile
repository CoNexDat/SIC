##################################################################### 
#   Variables				  			                            #
#####################################################################

OBJECTS = sic_client.o 
BINARY = sic_client

##################################################################### 
#   Options            					                            #
#####################################################################

CC = gcc
CFLACS = -g -std=gnu99 -o
LINKS = -I/usr/local/include -L/usr/local/lib -lgsl -lgslcblas -lm

##################################################################### 
#   Rules   				  			                            #
#####################################################################

all: sic_client

sic_client:
	$(CC) $(CFLACS) $(BINARY) sic_client.c $(LINKS)

clean:
	rm -f $(BINARY) $(OBJECTS)
  
